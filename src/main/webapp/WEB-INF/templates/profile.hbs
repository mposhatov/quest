<div class="profile">
    <div id = "page_photo" class="page_photo">
        <div id="photo" class="photo">
        </div>
        <div class="button button_add_photo" onclick="loadPhoto()">
            Изменить аватар
        </div>
        <input id="file" type="file" name="photo"/>
    </div>
    <div class="table">
        <div class="row">
            <div class="cell">
                Имя:
            </div>
            <div class="cell name">
                {{name}}
            </div>
        </div>
        <div class="row">
            <div class="cell">
                Уровеь:
            </div>
            <div class="cell">
                {{level}}
            </div>
        </div>
        <div class="row">
            <div class="cell">
                Опыт:
            </div>
            <div class="cell">
                {{experience}}
            </div>
        </div>
    </div>
</div>