<div id="warrior_{{warrior.id}}" class="warrior {{#if_eq currentWarrior true}} currentWarrior {{/if_eq}}">
    <div class="spell-passives">
        {{#each warrior.spellPassives}}
            <div class="spell-passive">
                {{#if_eq this.target.name 'ME'}}
                    <button onclick="spellPassive({{id}}, {{../warrior.id}}, event)">{{name}}</button>
                {{else}}
                    <button onclick="setSpellPassive({{id}}, event)">{{name}}</button>
                {{/if_eq}}
            </div>
        {{/each}}
    </div>

    <div class="spell-exhortations">
        {{#each warrior.spellExhortations}}
            <div class="spell-exhortation">
                <button onclick="setSpellExhortation({{id}}, event)">{{name}}</button>
            </div>
        {{/each}}
    </div>

    <div class="spell-attacks">
        {{#each warrior.spellAttacks}}
            <div class="spell-attack">
                <button onclick="setSpellAttack({{id}}, event)">{{name}}</button>
            </div>
        {{/each}}
    </div>

    <div class="spell-attacks">
        {{#each warrior.spellHeals}}
            <div class="spell-heal">
                <button onclick="setSpellHeal({{id}}, event)">{{name}}</button>
            </div>
        {{/each}}
    </div>

    <div class="attack_and_defense">
        <div class="attack">АТК {{warrior.warriorCharacteristics.attack}}</div>
        <div class="physical-defense">ЗЩТ {{warrior.warriorCharacteristics.physicalDefense}}</div>
    </div>
    <img src="/img/{{warrior.pictureName}}" alt="Archer">
    <span class="health">
        {{warrior.warriorCharacteristics.health}}
    </span>

    <div class="effects">
        {{#each warrior.effects}}
            <div class="effect">
                {{name}}
                {{leftSteps}}
            </div>
        {{/each}}
    </div>

</div>
