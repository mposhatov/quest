<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="25.08.2017 13:23" author="mposhatov">
        <createTable tableName="WARRIOR_LEVEL_REQUIREMENT">
            <column name="ID" type="java.sql.Types.BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_WARRIOR_LEVEL_REQUIREMENT_1"/>
            </column>
            <column name="WARRIOR_NAME" type="java.sql.Types.VARCHAR(20)"/>
            <column name="LEVEL" type="java.sql.Types.BIGINT"/>
            <column name="REQUIREMENT_EXPERIENCE" type="java.sql.Types.BIGINT"/>
            <column name="ADDITIONAL_WARRIOR_CHARACTERISTICS_ID" type="java.sql.Types.BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="25.10.2017 16:04" author="mposhatov">
        <createTable tableName="HERO_LEVEL_REQUIREMENT">
            <column name="LEVEL" type="java.sql.Types.BIGINT">
                <constraints primaryKey="true" primaryKeyName="PK_HERO_LEVEL_REQUIREMENT_1"/>
            </column>
            <column name="REQUIREMENT_EXPERIENCE" type="java.sql.Types.BIGINT"/>
            <column name="ADDITIONAL_HERO_POINT_ID" type="java.sql.Types.BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="28.08.2017 18:35" author="mposhatov">
        <createTable tableName="INVENTORY">
            <column name="HERO_ID" type="java.sql.Types.BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="PK_INVENTORY_1"/>
            </column>
            <column name="GOLDEN_COINS" type="java.sql.Types.BIGINT"/>
            <column name="DIAMONDS" type="java.sql.Types.BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>